@model PartyInvites.Models.GuestResponse
@{
    Layout = null; // Không sử dụng layout cho trang này.
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Thanks</title>
</head>
<body>
    <div>
        <!-- Hiển thị lời cảm ơn và tên khách mời từ Model. -->
        <h1>Thank you, @Model?.Name!</h1>
        <!-- Kiểm tra xem khách mời có tham dự hay không. -->
        @if (Model?.WillAttend == true)
        {
            <!-- Hiển thị thông báo nếu khách mời tham dự. -->
            @:It's great that you're coming. The drinks are already in the fridge!
        }
        else
        {
            <!-- Hiển thị thông báo nếu khách mời không tham dự. -->
            @:Sorry to hear that you can't make it, but thanks for letting us know.
        }
    </div>
    Click
    <!-- Liên kết đến action "ListResponses" để xem danh sách khách mời. -->
    <a asp-action="ListResponses">here</a> to see who is coming.

</body>
</html>
